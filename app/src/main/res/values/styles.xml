<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarTheme">
        <item name="android:textColorPrimary">@color/md_white_1000</item>
        <item name="android:textColorSecondary">@color/md_white_1000</item>
    </style>

    <style name="ToolbarPopupTheme" parent="ThemeOverlay.AppCompat.Light">
    </style>

    <style name="WebProgressBarStyle" parent="Widget.AppCompat.ProgressBar.Horizontal">
    </style>

    <style name="BaseTextViewStyle">
        <item name="android:textColor">@color/md_grey_800</item>
    </style>

    <style name="RouteTitleTextStyle" parent="BaseTextViewStyle">
        <item name="android:textSize">@dimen/train_title_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="RouteSubtitleTextStyle" parent="BaseTextViewStyle">
        <item name="android:textSize">@dimen/train_subtitle_text_size</item>
        <item name="android:textColor">@color/md_grey_600</item>
    </style>

    <style name="RouteLabelTextStyle" parent="BaseTextViewStyle">
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textSize">@dimen/train_label_text_size</item>
        <item name="android:background">@drawable/shape_round_grey</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="TrainLabelTextStyle" parent="RouteLabelTextStyle">
        <item name="android:drawableStart">@drawable/ic_train_white_24dp</item>
        <item name="android:drawableLeft">@drawable/ic_train_white_24dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BusLabelTextStyle" parent="RouteLabelTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/shape_round_rect_orange</item>
        <item name="android:drawableLeft">@drawable/ic_bus_white_24dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="NotificationTextStyle" parent="BaseTextViewStyle">
        <item name="android:textSize">@dimen/notification_text_size</item>
    </style>

    <style name="NotificationSubtitleTextStyle" parent="BaseTextViewStyle">
        <item name="android:textColor">@color/md_grey_500</item>
        <item name="android:textSize">@dimen/notification_subtitle_text_size</item>
    </style>

    <style name="FavoriteButtonStyle">
        <item name="android:src">@drawable/selector_favorite</item>
        <item name="android:tint">@color/colorAccent</item>
        <item name="android:contentDescription">@string/content_description_favorite_route</item>
    </style>
</resources>
