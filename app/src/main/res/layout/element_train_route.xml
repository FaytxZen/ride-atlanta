<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="12dp">

    <ImageView
        android:id="@+id/train_favorite_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="8dp"
        android:ellipsize="end"
        android:tint="@color/colorAccent"
        android:src="@drawable/selector_favorite"
        android:contentDescription="@string/content_description_favorite_route"/>

    <TextView
        android:id="@+id/train_line_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="2dp"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/md_white_1000"
        tools:background="@color/md_red_600"
        tools:text="RED"/>

    <TextView
        android:id="@+id/train_status_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/train_line_text_view"
        android:layout_toStartOf="@id/train_favorite_button"
        android:layout_toLeftOf="@id/train_favorite_button"
        android:layout_marginTop="4dp"
        tools:text="Boarding the lorem ipsum train of filler text ipsum lorem."/>

    <TextView
        android:id="@+id/train_destination_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/train_line_text_view"
        android:layout_toRightOf="@+id/train_line_text_view"
        android:layout_toStartOf="@+id/train_favorite_button"
        android:layout_toLeftOf="@id/train_favorite_button"
        android:gravity="start"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="Hamilton E Holmes of Geeky Band Nerds Station"
        android:layout_alignParentTop="true" />
</RelativeLayout>