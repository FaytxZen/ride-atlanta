<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp">

    <TextView
        android:id="@+id/route_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:padding="4dp"
        android:background="@color/md_grey_500"
        android:textColor="@color/md_white_1000"
        tools:text="Route 5"/>

    <TextView
        android:id="@+id/route_time_until_arrival"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/route_name"
        android:layout_toLeftOf="@+id/favorite_button"
        android:layout_toStartOf="@+id/favorite_button"
        tools:text="5 minutes"/>

    <TextView
        android:id="@+id/route_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        tools:text="Buckhead and Duckface"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/route_name"
        android:layout_toEndOf="@+id/route_name"
        android:layout_toStartOf="@+id/favorite_button"
        android:layout_toLeftOf="@id/favorite_button"/>

    <ImageView
        android:id="@+id/favorite_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="8dp"
        android:ellipsize="end"
        android:tint="@color/colorAccent"
        android:src="@drawable/selector_favorite"
        android:contentDescription="@string/content_description_favorite_route"/>
</RelativeLayout>